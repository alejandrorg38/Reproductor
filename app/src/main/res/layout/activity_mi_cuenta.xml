<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiCuenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icono_usuarioMC"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:srcCompat="@drawable/icono_usuario"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tv_emailMC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi cuenta"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="18dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_cerrarSesionMC"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_button_blue"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="cerrarSesion"
            android:text="Cerrar sesion"
            android:textAllCaps="false"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_borrarCuentaMC"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button_red"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:onClick="borrarCuenta"
            android:text="Borrar cuenta"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>